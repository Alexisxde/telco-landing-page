  .dropdowns {
    z-index: 2;
    top: 84px;
    left: -9999px;
    right: 10px;
    padding: 14px 0;
    display: flex;
    align-items: center;
    position: static;
    flex-direction: row;
    justify-content: flex-start;
    background: transparent;
    translate: 0;
    opacity: 1;
    visibility: visible;
    transition-property: opacity, visibility;
    transition-duration: 0.3s;
  }

  .dropdown {
    position: relative;
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
  }

  .dropdown > button {
    display: flex;
    align-items: center;
    gap: 4px;
    text-align: left;
    font-size: 16px;
    padding: 0 8px;
    opacity: 1;
  }

  .dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    translate: 0 0;
  }

  .dropdown-menu {
    display: grid;
    position: absolute;
    top: 35px;
    padding: 6px 24px;
    height: auto;
    width: auto;
    overflow: visible;
    opacity: 0;
    visibility: hidden;
    background: var(--card);
    border-radius: 6px;
    place-items: start;
    translate: 0 24px;
    transition: 0.3s;
  }

  .dropdown-menu > a {
    color: var(--text);
    font-size: 14px;
    text-align: left;
    white-space: nowrap;
    padding: 8px;
    margin: 0;
    opacity: 0.6;
  }

  .dropdown:hover > a {
    opacity: 1;
  }

  .dropdown-menu > a:hover {
    opacity: 1;
  }

  .dropdowns::before {
    content: '';
    position: absolute;
    left: -9999px;
    background-color: var(--card);
    border-radius: 6px;
    display: none;
  }

  @keyframes enhance-header {
    to {
      background-color: transparent;
      backdrop-filter: blur(20px);
    }
  }
</style>
