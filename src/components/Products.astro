---
const products = [
  {
    logo: 'conectividad',
    title: 'Conectividad',
    description:
      'Acceso a internet o servicio de transporte. Simétrico, Dedicado y L2L.',
    link: 'conectividad'
  },
  {
    logo: 'datacenter',
    title: 'Cloud DataCenter',
    description:
      'Contamos con uno de los DataCenter más importante de la provincia.',
    link: 'datacenter'
  },
  {
    logo: 'desarrollo',
    title: 'Desarrollo',
    description:
      'Modernizando la provincia con aplicaciones y webs innovadoras.',
    link: 'desarrollo'
  },
  {
    logo: 'educacion',
    title: 'Formación',
    description:
      'Acortando la brecha digital y brindando oportunidades igualitarias para todos.',
    link: 'educacion'
  }
]
---

<section class="products">
  {
    products.map(({ logo, title, description, link }) => (
      <a class="card" href={`/telco/${link}`}>
        <header class="card__header">
          <img src={`/logo_products/${logo}.png`} alt={title} loading="lazy" />
        </header>
        <div class="card__body">
          <h2>{title}</h2>
          <p>{description}</p>
        </div>
      </a>
    ))
  }
</section>

<style>
  .products {
    display: grid;
    padding: 32px;
    align-items: center;
    gap: 16px;
    grid-template-columns: repeat(auto-fit, minmax(296px, 1fr));
  }

  .card {
    display: flex;
    padding: 24px;
    flex-direction: column;
    align-items: start;
    background-color: var(--card);
    border-radius: 16px;
    height: 194px;
    gap: 16px;
    opacity: 0;
    transform: translateY(50px);
    animation: appear 0.5s ease-out forwards;
    transition:
      color 150ms ease-in-out,
      background-color 150ms ease-in-out;

    &:hover {
      background-color: var(--card-hover);
    }
  }

  .card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;

    img {
      width: 32px;
      aspect-ratio: 1 / 1;
      object-fit: contain;
    }
  }

  .card:hover {
    .card__body {
      h2 {
        color: var(--card);
      }
    }
  }

  .card__body {
    display: flex;
    flex-direction: column;
    gap: 8px;

    h2 {
      font-size: 20px;
      transition: color 150ms ease-in-out;
    }

    p {
      color: var(--text__gray);
      font-size: 14px;
    }
  }

  @keyframes appear {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card:nth-child(1) {
    animation-delay: 0s;
  }

  .card:nth-child(2) {
    animation-delay: 0.5s;
  }

  .card:nth-child(3) {
    animation-delay: 1s;
  }

  .card:nth-child(4) {
    animation-delay: 1.5s;
  }
</style>
